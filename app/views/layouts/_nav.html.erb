<div class="row">
  <div class="three columns">
    <h1 class="logo"><img src="http://open.jorum.ac.uk/xmlui/bitstream/handle/123456789/2057/movicam.jpg" /></h1>
  </div>
  <div class="nine columns">
    <ul class="nav-bar right">
      <li><%= link_to('Home', root_path) %></li>
      <li><%= link_to('Movie Clubs', movies_path) %></li>
      <li><%= link_to('New Movie', new_movie_path) %></li>
      <div id="container">
  <div id="user_nav">
